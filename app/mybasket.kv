#:kivy 2.3.0

WindowManager:
    LoginScreen:
    NewUser:
    MainScreen:
    NewRecpScreen:
    ViewRecpScreen:
    CreBasketScreen:
    PriceResultsScreen:

<LoginScreen>:
    name: "login"
    GridLayout:
        cols: 1
        spacing: 10
        padding: 10

        TextInput:
            id: login_username
            hint_text: "Username"
            multiline: False

        TextInput:
            id: login_password
            hint_text: "Password"
            password: True
            multiline: False

        Button:
            text: "Login"
            on_release: root.login(login_username.text, login_password.text)

        Button:
            text: "Create Account"
            on_release: app.root.current = "new_user"

<NewUser>:
    name: "new_user"
    GridLayout:
        cols: 1
        spacing: 10
        padding: 10

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: '48dp'
            Button:
                text: "High"
                on_release: root.set_price_sensitivity('High')
            Button:
                text: "Medium"
                on_release: root.set_price_sensitivity('Medium')
            Button:
                text: "Low"
                on_release: root.set_price_sensitivity('Low')
        Button:
            text: "Create Profile"
            on_release: root.create_user_profile(username.text, password.text, root.price_sensitivity)
        Button:
            text: "Back to Login"
            on_release: app.root.current = "login"

<MainScreen>
    name: "main"
    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:1

            Label:
                text: "Welcome to the Receipt Scanner App"
                font_size: 24
                bold: True
                size_hint: (0.2, 0.2)
                pos_hint: {"top": 1}

            Label:
                text: "Please select an option below"
                font_size: 18
                bold: True
                size_hint: (0.2, 0.2)
                pos_hint: {"top": 1}

            AnchorLayout:
                GridLayout:
                    cols:1
                    # size: root.width/2, root.height/2
                    spacing: 10
                    size_hint: (0.65, 0.7)
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    Button:
                        id: new_receipt
                        text: "Scan Receipt"
                        on_release:
                            app.root.current = "new_receipt"
                            root.manager.transition.direction = "left"

                    Button:
                        id: view_receipts
                        text: "View Receipts"
                        on_release:
                            app.root.current = "view_receipts"
                            root.manager.transition.direction = "left"

                    Button:
                        id: create_basket
                        text: "Create Basket"
                        on_release:
                            app.root.current = "create_basket"
                            root.manager.transition.direction = "left"

<NewRecpScreen>
    name: "new_receipt"
    GridLayout:
        cols: 1
        spacing: 10
        padding: 10
        Button:
            text: "Generate Receipts"
            on_release: root.generate_and_insert_receipts(app.get_user_id())
        Button:
            text: "Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<ViewRecpScreen>:
    name: "view_receipts"
    BoxLayout:
        orientation: 'vertical'
        RecycleView:
            id: receipts_list
            viewclass: 'Button'
            RecycleBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                default_size: None, dp(56)
                default_size_hint: 1, None

<ReceiptButton@Button>:
    receipt_data: None
    on_release: app.show_receipt_details(self.receipt_data)

<ReceiptDetailPopup@BoxLayout>:
    orientation: 'vertical'
    Label:
        id: popup_content
        text: ''
    Button:
        text: 'Delete Receipt'
        size_hint: 1, 0.2
        on_release: app.delete_receipt(root.ids.popup_content.receipt_id)
    Button:
        text: 'Close'
        size_hint: 1, 0.2
        on_release: app.root.get_screen('view_receipts').dismiss_popup()


<CreBasketScreen>
    name: "create_basket"
    GridLayout:
        cols: 1
        size: root.width, root.height
        spacing: 10
        padding: 10

        Spinner:
            id: day_spinner
            text: 'Select Days'
            values: ['1 day', '7 days', '14 days', '30 days', 'All time']
            size_hint: (1, 0.1)

        TextInput:
            id: item1
            hint_text: "Enter item 1"
        TextInput:
            id: item2
            hint_text: "Enter item 2"
        TextInput:
            id: item3
            hint_text: "Enter item 3"
        TextInput:
            id: item4
            hint_text: "Enter item 4"
        TextInput:
            id: item5
            hint_text: "Enter item 5"

        Button:
            text: "Check Prices"
            on_release: root.check_prices(day_spinner.text, [item1.text, item2.text, item3.text, item4.text, item5.text])

        Button:
            text: "Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

<PriceResultsScreen>:
    name: "price_results"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: results_label
            text: ""
        Button:
            text: "Back"
            on_release: app.root.current = "create_basket"